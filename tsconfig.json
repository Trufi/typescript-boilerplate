{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"]
        },
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["dom", "es6"],
        "sourceMap": true,
        "strict": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}
